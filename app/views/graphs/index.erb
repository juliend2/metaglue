<script>
function goThere(element) {
  window.location.href= element.dataset.href;
  return false;
}
</script>

<h3><%= link_to "new graph", :new_graph %></h3>

<table class="hoverable">
<%- @graphs.each do |graph| %>
  <tr>
    <td>
      <a href="#" data-href="<%= edit_graph_path(graph) %>" onclick="return goThere(this); return false;"><%= graph.name %></a>
    </td>
    <td>
      <%= link_to "Delete", graph, method: :delete, data: {confirm: "You sure?"} %>
    </td>
  </tr>
<%- end %>
</table>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
